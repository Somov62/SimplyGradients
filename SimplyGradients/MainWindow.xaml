<Window
    x:Class="SimplyGradients.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:SimplyGradients.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SimplyGradients"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Simple gradients for wpf"
    Background="#dddddd"
    Width="1000"
    Height="450"
    mc:Ignorable="d">
    <Window.Resources />
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Name="gradientPresenter" CornerRadius="9">
            <Border.Effect>
                <DropShadowEffect Opacity="0.5" />
            </Border.Effect>
            <Border.Background>
                <LinearGradientBrush GradientStops="{Binding GradientStops}" StartPoint="0, 0" EndPoint="1, 1" />
            </Border.Background>
        </Border>

        <Grid Grid.Row="2">
            <controls:LinearGradientViewer SelectedGradientStop="{Binding SelectedGradientStop, Mode=TwoWay}"/>
        </Grid>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="20" />
                <ColumnDefinition />
                <ColumnDefinition Width="21" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="2">

                <controls:SpectrumSlider
                    VerticalAlignment="Top"
                    Maximum="100"
                    Minimum="0"
                    Value="{Binding SelectedColor.AccentPercent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                   
                </controls:SpectrumSlider>

                <GroupBox
                    Padding="10,5,0,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    BorderBrush="#333333">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="A" VerticalAlignment="Center" />
                            <TextBox
                                Text="{Binding SelectedColor.A, UpdateSourceTrigger=PropertyChanged}"
                                MinWidth="120"
                                Margin="10,0"
                                HorizontalContentAlignment="Center" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="R" VerticalAlignment="Center" />
                            <TextBox
                                Text="{Binding SelectedColor.R, UpdateSourceTrigger=PropertyChanged}"
                                MinWidth="120"
                                Margin="10,0"
                                HorizontalContentAlignment="Center" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="G" VerticalAlignment="Center" />
                            <TextBox
                                Text="{Binding SelectedColor.G, UpdateSourceTrigger=PropertyChanged}"
                                MinWidth="120"
                                Margin="10,0"
                                HorizontalContentAlignment="Center" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="B" VerticalAlignment="Center" />
                            <TextBox
                                Text="{Binding SelectedColor.B, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                MinWidth="120"
                                Margin="10,0"
                                HorizontalContentAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>


            <Grid>
                <controls:ColorPicker AccentColor="{Binding SelectedColor.NearestAccentColor}"/>
            </Grid>

        </Grid>

    </Grid>
</Window>
